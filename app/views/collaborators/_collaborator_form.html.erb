<%= simple_form_for(@collaborator,
										:url => {:controller => :collaborators,
															:action => :create,
															:project_id => @project.id,
															:user_id => @user.id },
										:html => {:class => 'form-vertical' }) do |f| %> 
  <%= f.error_notification %>
  <%= text_field_tag :email %>  
  
  <%= f.button :submit, 'Add Collaborator', :class => 'btn-primary' %>
<% end %>