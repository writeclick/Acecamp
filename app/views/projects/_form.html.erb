<div id="new-project" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>New Project<h3>
	</div>
	<div class="modal-body">
		<%= form_tag url_for(:controller => "projects", :action => "create"), :method => "post", :class => "form-vertical" do %> 
  		<%= text_field :project, :title %> 
  		<%= text_area :project, :description %>
  		
 		
 	</div>
 	<div class="modal-footer">
 		<a href="#" class="btn">Close</a>
 		<%= submit_tag("Create Project", :class => 'btn btn primary') %>
 		<% end %>
 	</div>
 </div>






