<div class="tab-pane" id="users_projects">
	<h1>All Your Projects</h1>
	<div class="accordion" id="accordion-projects">
		<% @projects.each do |project| %>
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="accordion-projects" href="#collapse<%=dom_id(project)%>">
						<strong><%= project.title %></strong>
					</a><br />
				</div>
				<div id="collapse<%=dom_id(project)%>" class="accordion-body collapse">
					<div class="accordion-inner">
						<%= project.description %>
						<%= render :partial => 'collaborators/collaborator_form',
											 :locals => { :project_id => project.id} %>

						<%= render :partial => 'tasklists/form',
											 :locals => { :project_id => project.id } %>

						<% project.tasklists.each do |tasklist| %>
							<p><strong>Tasklist:<%= tasklist.name %></strong></p>

							<ul>
								<% tasklist.tasks.each do |task| %>
										<li>
											<strong><%= task.name %></strong><br /><%= task.description %>
										</li>
								<% end %>

								<%= render :partial => 'tasks/form',
												 :locals => { :tasklist_id => tasklist.id,
												 							:project_id => tasklist.project_id } %>
							</ul>
					  <% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
