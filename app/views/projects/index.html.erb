<%= render 'layouts/messages' %>

<ul class="nav nav-tabs" id="projects-tabs">
	<li><a href="#users-projects" data-toggle="tab">Your Projects</a></li>
	<li><a href="#collaborations" data-toggle="tab">Collaborations</a></li>
</ul>

<div class="tab-content">
	<div class="tab-pane" id="users-projects">
		<div class="pull-right">
		  <a href="#new-project" data-toggle="modal" class="btn btn-primary btn-default">
		  	<i class="icon-plus icon-white"></i> New Project
		  </a>
		</div>
		<h1>All Your Projects</h1>
		<div class="accordion" id="accordion-projects">
			<%= render 'projects', :project => @project %>
		</div>
	</div>

	<div class="tab-pane" id="collaborations">
		<h3>Collaborating Projects</h3>
		<div class="accordion" id="accordion-collaborations">
			<%= render 'collaboration',
								 :project => @project %>
		</div>
	</div>
</div>