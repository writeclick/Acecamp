<%= simple_form_for(@tasklist,
										:url => {:controller => :tasklists,
															:action => :create,
															:project_id => @project.id,
														},
										:html => {:class => 'form-vertical' }) do |f| %> 
  <%= f.error_notification %>
  <%= f.input :name %>  
  
  <%= f.button :submit, 'Add Tasklist', :class => 'btn-primary' %>
<% end %>