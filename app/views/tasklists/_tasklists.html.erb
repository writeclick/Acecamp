<%= render 'tasklists/form',
           :project_id => project.id %>

<div class="tasklists">
  <% project.tasklists.each do |tasklist| %>
    <p><strong>Tasklist:<%= tasklist.name %></strong></p>
    <ul>
      <%= render 'tasks/tasks',
                 :tasklist => tasklist %>

      <%= render 'tasks/form',
                 :tasklist_id => tasklist.id,
                 :project_id => tasklist.project_id %>
    </ul>
  <% end %>
</div>