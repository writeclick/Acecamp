<%= form_tag url_for(:controller => :tasks, 
						 :action => :create,
						 :tasklist_id => tasklist_id),			 
						 :class => 'form-vertical' do %>
	<fieldset> 
  <%= text_field :task, :name %><br />
  <%= text_area :task, :description %><br />
 
  <%= submit_tag('Add Task', :class => 'btn-primary') %>
  </fieldset>
<% end %>
	