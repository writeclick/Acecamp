<%= simple_form_for(@task,
										:url => {:controller => :tasks,
														 :action => :create,
														 :tasklist_id => params[:tasklist_id]
														},
										:html => {:class => 'form-vertical' }) do |f| %> 
  <%= f.error_notification %>
  <%= f.input :name %>  
  <%= f.input :description %>  
  
  <%= f.button :submit, 'Add Task', :class => 'btn-primary' %>
<% end %>